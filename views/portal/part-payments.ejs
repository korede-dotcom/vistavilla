<%- include('partial/header', { title: 'Part Payments - Wishmewell Apartment',email:email,roleName:roleName }) %>
<%- include('partial/sidebar', { name: name}) %>

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <div class="mt-5">
                        <h4 class="card-title float-left mt-2">
                            <i class="fas fa-money-bill-wave" style="color: #FFA500;"></i> Part Payments
                        </h4>
                        <a href="/portal/add-booking" class="btn btn-primary float-right veiwbutton">
                            <i class="fas fa-plus"></i> New Booking
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-xl-3 col-sm-6 col-12">
                <div class="card board1 fill">
                    <div class="card-body">
                        <div class="dash-widget-header">
                            <div>
                                <h3 class="card_widget_header"><%= partPayments.length %></h3>
                                <h6 class="text-muted">Total Part Payments</h6>
                            </div>
                            <div class="ml-auto mt-md-3 mt-lg-0">
                                <span class="opacity-7 text-muted">
                                    <i class="fas fa-list fa-2x" style="color: #FFA500;"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-sm-6 col-12">
                <div class="card board1 fill">
                    <div class="card-body">
                        <div class="dash-widget-header">
                            <div>
                                <h3 class="card_widget_header">
                                    ₦<%= partPayments.reduce((sum, p) => sum + (p.amount_paid / 100), 0).toLocaleString() %>
                                </h3>
                                <h6 class="text-muted">Total Collected</h6>
                            </div>
                            <div class="ml-auto mt-md-3 mt-lg-0">
                                <span class="opacity-7 text-muted">
                                    <i class="fas fa-check-circle fa-2x" style="color: #28a745;"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-sm-6 col-12">
                <div class="card board1 fill">
                    <div class="card-body">
                        <div class="dash-widget-header">
                            <div>
                                <h3 class="card_widget_header" style="color: #dc3545;">
                                    ₦<%= partPayments.reduce((sum, p) => sum + (p.balance / 100), 0).toLocaleString() %>
                                </h3>
                                <h6 class="text-muted">Total Balance Due</h6>
                            </div>
                            <div class="ml-auto mt-md-3 mt-lg-0">
                                <span class="opacity-7 text-muted">
                                    <i class="fas fa-exclamation-circle fa-2x" style="color: #dc3545;"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-sm-6 col-12">
                <div class="card board1 fill">
                    <div class="card-body">
                        <div class="dash-widget-header">
                            <div>
                                <h3 class="card_widget_header">
                                    <%= partPayments.filter(p => p.payment_status === 'partial').length %>
                                </h3>
                                <h6 class="text-muted">Pending Payments</h6>
                            </div>
                            <div class="ml-auto mt-md-3 mt-lg-0">
                                <span class="opacity-7 text-muted">
                                    <i class="fas fa-clock fa-2x" style="color: #FFA500;"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="card card-table">
                    <div class="card-body booking_card">
                        <!-- Date Filter and Download Section -->
                        <div class="mb-4">
                            <form method="get" action="/portal/part-payments" id="filterForm">
                                <div class="row align-items-end">
                                    <div class="col-md-3">
                                        <label for="start_date" class="font-weight-bold">
                                            <i class="fas fa-calendar-alt"></i> Start Date
                                        </label>
                                        <input type="date" id="start_date" name="start" class="form-control">
                                    </div>
                                    <div class="col-md-3">
                                        <label for="end_date" class="font-weight-bold">
                                            <i class="fas fa-calendar-alt"></i> End Date
                                        </label>
                                        <input type="date" id="end_date" name="end" class="form-control">
                                    </div>
                                    <div class="col-md-6">
                                        <button type="submit" class="btn btn-primary mr-2">
                                            <i class="fas fa-filter"></i> Filter
                                        </button>
                                        <button type="button" id="download-csv" class="btn btn-success mr-2">
                                            <i class="fas fa-download"></i> Download CSV
                                        </button>
                                        <a href="/portal/part-payments" class="btn btn-secondary">
                                            <i class="fas fa-redo"></i> Reset
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <div class="table-responsive">
                            <table class="datatable table table-stripped table table-hover table-center mb-0">
                                <thead>
                                    <tr>
                                        <th>S/N</th>
                                        <th>Reference ID</th>
                                        <th>Guest Details</th>
                                        <th>Room Details</th>
                                        <th>Total Amount</th>
                                        <th>Amount Paid</th>
                                        <th>Balance</th>
                                        <th>Booking Period</th>
                                        <th>Status</th>
                                        <th class="text-right">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (partPayments.length === 0) { %>
                                        <tr>
                                            <td colspan="10" class="text-center">
                                                <div class="py-5">
                                                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                                    <p class="text-muted">No part payments found</p>
                                                </div>
                                            </td>
                                        </tr>
                                    <% } else { %>
                                        <% partPayments.forEach((payment, index) => { %>
                                            <tr>
                                                <td><%= index + 1 %></td>
                                                <td>
                                                    <span class="badge badge-info" style="font-size: 11px;">
                                                        <%= payment.reference_id %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <h2 class="table-avatar">
                                                        <a href="javascript:void(0);" class="avatar avatar-sm mr-2">
                                                            <i class="fas fa-user-circle fa-2x" style="color: #6b6b6b;"></i>
                                                        </a>
                                                        <a href="javascript:void(0);">
                                                            <%= payment.guest_name %><br>
                                                            <span style="font-size: 11px; color: #999;">
                                                                <i class="fas fa-phone"></i> <%= payment.guest_phone || 'N/A' %>
                                                            </span>
                                                        </a>
                                                    </h2>
                                                </td>
                                                <td>
                                                    <strong><%= payment.room_name %></strong><br>
                                                    <span class="badge badge-secondary" style="font-size: 10px;">
                                                        <i class="fas fa-door-open"></i> <%= payment.room_number %>
                                                    </span>
                                                    <br>
                                                    <small class="text-muted"><%= payment.nights %> night(s)</small>
                                                </td>
                                                <td>
                                                    <strong>₦<%= (payment.total_amount / 100).toLocaleString() %></strong>
                                                </td>
                                                <td>
                                                    <span style="color: #28a745; font-weight: bold;">
                                                        ₦<%= (payment.amount_paid / 100).toLocaleString() %>
                                                    </span>
                                                    <br>
                                                    <small class="text-muted">
                                                        <%= Math.round((payment.amount_paid / payment.total_amount) * 100) %>% paid
                                                    </small>
                                                </td>
                                                <td>
                                                    <span style="color: #dc3545; font-weight: bold; font-size: 14px;">
                                                        ₦<%= (payment.balance / 100).toLocaleString() %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <small>
                                                        <i class="fas fa-calendar-check" style="color: #28a745;"></i>
                                                        <%= new Date(payment.start_date).toLocaleDateString('en-GB') %>
                                                    </small>
                                                    <br>
                                                    <small>
                                                        <i class="fas fa-calendar-times" style="color: #dc3545;"></i>
                                                        <%= new Date(payment.end_date).toLocaleDateString('en-GB') %>
                                                    </small>
                                                </td>
                                                <td>
                                                    <% if (payment.payment_status === 'partial') { %>
                                                        <span class="badge badge-pill" style="background-color: #FFA500; color: white; padding: 5px 10px;">
                                                            <i class="fas fa-clock"></i> Partial
                                                        </span>
                                                    <% } else { %>
                                                        <span class="badge badge-pill badge-success" style="padding: 5px 10px;">
                                                            <i class="fas fa-check-circle"></i> Completed
                                                        </span>
                                                    <% } %>
                                                </td>
                                                <td class="text-right">
                                                    <% if (payment.payment_status === 'partial') { %>
                                                        <a href="/portal/complete-payment?id=<%= payment._id %>"
                                                           class="btn btn-sm btn-primary"
                                                           style="background-color: #6b6b6b; border-color: #6b6b6b;">
                                                            <i class="fas fa-money-bill-wave"></i> Complete Payment
                                                        </a>
                                                    <% } else { %>
                                                        <span class="badge badge-success">
                                                            <i class="fas fa-check"></i> Paid in Full
                                                        </span>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="assets/js/jquery-3.5.1.min.js"></script>
<script src="assets/js/popper.min.js"></script>
<script src="assets/js/bootstrap.min.js"></script>
<script src="assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>
<script src="assets/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="assets/plugins/datatables/datatables.min.js"></script>
<script src="assets/js/script.js"></script>

<script>
    // Handle CSV download
    document.getElementById('download-csv').addEventListener('click', function(e) {
        e.preventDefault();

        const startDate = document.getElementById('start_date').value;
        const endDate = document.getElementById('end_date').value;

        // Build the request URL
        let requestUrl = '/portal/part-payments-csv';
        const params = [];

        if (startDate) params.push(`start=${startDate}`);
        if (endDate) params.push(`end=${endDate}`);

        if (params.length > 0) {
            requestUrl += '?' + params.join('&');
        }

        // Create an anchor element to trigger download
        const link = document.createElement('a');
        link.href = requestUrl;
        link.click();
    });
</script>
</body>
</html>

