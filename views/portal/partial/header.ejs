	 <style>
    /* Loader CSS */
    .loader {
      border: 4px solid #f3f3f3;
      border-radius: 50%;
      border-top: 4px solid #3498db;
      width: 20px;
      height: 20px;
      animation: spin 1s linear infinite;
      display: inline-block;
      vertical-align: middle;
    }

    /* Animation for the loader */
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    /* Optional: Center the text and loader inside the button */
    #submitBtn {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    /* Modern UI Enhancements */
    .header {
      background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
      box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
      border-bottom: 1px solid #e9ecef;
    }

    .sidebar {
      box-shadow: 2px 0 15px rgba(0, 0, 0, 0.1);
    }

    .sidebar .sidebar-menu ul li a {
      transition: all 0.3s ease;
      border-radius: 8px;
      margin: 4px 10px;
    }

    .sidebar .sidebar-menu ul li a:hover {
      background: rgba(107, 107, 107, 0.1);
      transform: translateX(5px);
    }

    .sidebar .sidebar-menu ul li.active a {
      background: linear-gradient(135deg, #6b6b6b 0%, #9e9e9e 100%);
      box-shadow: 0 4px 12px rgba(107, 107, 107, 0.3);
    }

    .page-wrapper {
      background: #f5f7fa;
    }

    .card {
      border-radius: 12px;
      border: none;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
      transition: all 0.3s ease;
    }

    .card:hover {
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .btn-primary, .veiwbutton {
      background: linear-gradient(135deg, #6b6b6b 0%, #9e9e9e 100%) !important;
      border: none !important;
      border-radius: 8px !important;
      padding: 10px 20px !important;
      font-weight: 500 !important;
      transition: all 0.3s ease !important;
    }

    .btn-primary:hover, .veiwbutton:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(107, 107, 107, 0.4) !important;
    }

    .table {
      border-radius: 8px;
      overflow: hidden;
    }

    .table thead th {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      color: #495057;
      font-weight: 600;
      border: none;
      padding: 15px;
    }

    .table tbody tr {
      transition: all 0.2s ease;
    }

    .table tbody tr:hover {
      background-color: #f8f9fa;
      transform: scale(1.01);
    }

    .badge {
      padding: 6px 12px;
      border-radius: 6px;
      font-weight: 500;
    }

    .modal-content {
      border-radius: 12px;
      border: none;
    }

    .modal-header {
      border-radius: 12px 12px 0 0;
      border-bottom: none;
    }

    /* Smooth scrollbar */
    ::-webkit-scrollbar {
      width: 8px;
      height: 8px;
    }

    ::-webkit-scrollbar-track {
      background: #f1f1f1;
    }

    ::-webkit-scrollbar-thumb {
      background: #6b6b6b;
      border-radius: 4px;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: #9e9e9e;
    }

    /* Page title styling */
    .card-title {
      color: #2c3e50;
      font-weight: 600;
    }

    /* Input focus */
    .form-control:focus {
      border-color: #6b6b6b;
      box-shadow: 0 0 0 0.2rem rgba(193, 155, 118, 0.25);
    }

    /* Dropdown menu */
    .dropdown-menu {
      border-radius: 8px;
      border: none;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .dropdown-item {
      transition: all 0.2s ease;
      border-radius: 6px;
      margin: 2px 5px;
    }

    .dropdown-item:hover {
      background-color: rgba(193, 155, 118, 0.1);
      color: #6b6b6b;
    }
  </style>
