        // Function to close the modal
        function closeModal() {
            const modal = document.getElementById('roomModal');
            modal.style.display = "none";
        }
        
        // Ensure modal is hidden when the page loads
        document.addEventListener("DOMContentLoaded", () => {
    const modal = document.getElementById('roomModal');
    modal.style.display = "none"; // Hide modal on page load

    const url = new URL(window.location.href);
    let price = parseFloat(url.searchParams.get('price')); // Base price from URL
    const categoryId = url.searchParams.get('id');

    // Display initial price
    document.querySelector('#price').innerText = `â‚¦${price.toLocaleString('en-NG', {minimumFractionDigits: 2, maximumFractionDigits: 2})}`;

    // Helper to format date as 'YYYY-MM-DD'
    const formatDate = (date) => {
        const year = date.getFullYear();
        const month = String(date.getMonth() + 1).padStart(2, '0');
        const day = String(date.getDate()).padStart(2, '0');
        return `${year}-${month}-${day}`;
    };

    // Set default dates for check-in and check-out
    const setDefaultDates = () => {
        const today = new Date();
        const tomorrow = new Date(today);
        tomorrow.setDate(today.getDate() + 1);

        document.getElementById('checkIn').value = formatDate(today);
        document.getElementById('checkOut').value = formatDate(tomorrow);
    };

    setDefaultDates(); // Initialize default dates

    // Fetch special pricing for selected dates
    async function fetchSpecialPricing(checkInDate) {
        try {
            const response = await fetch(`/portal/api/pricing/category/${categoryId}?date=${checkInDate}`);
            if (response.ok) {
                const data = await response.json();
                if (data.status && data.data.hasSpecialPrice) {
                    price = parseFloat(data.data.price);
                    const config = data.data.pricingConfig;
                    const startDate = new Date(config.start_date).toLocaleDateString('en-NG', {
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric'
                    });
                    const endDate = new Date(config.end_date).toLocaleDateString('en-NG', {
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric'
                    });

                    document.querySelector('#price').innerText = `â‚¦${price.toLocaleString('en-NG', {minimumFractionDigits: 2, maximumFractionDigits: 2})} (Special Price)`;

                    console.log('âœ… Special pricing applied:', {
                        price,
                        duration: `${startDate} - ${endDate}`,
                        configName: config.config_name
                    });

                    // Show pricing info card
                    const pricingCard = document.getElementById('pricingInfoCard');
                    const pricingConfigName = document.getElementById('pricingConfigName');
                    const pricingDuration = document.getElementById('pricingDuration');
                    const pricingAmount = document.getElementById('pricingAmount');
                    const pricingDescription = document.getElementById('pricingDescription');

                    pricingCard.style.display = 'block';
                    pricingConfigName.textContent = config.config_name || 'Special Pricing';
                    pricingDuration.textContent = `${startDate} - ${endDate}`;
                    pricingAmount.textContent = `â‚¦${price.toLocaleString('en-NG', {minimumFractionDigits: 2, maximumFractionDigits: 2})} / night`;

                    if (config.description) {
                        pricingDescription.textContent = config.description;
                        pricingDescription.style.display = 'block';
                    } else {
                        pricingDescription.style.display = 'none';
                    }

                    // Add animation
                    pricingCard.style.animation = 'fadeInDown 0.5s ease-out';
                } else {
                    price = parseFloat(url.searchParams.get('price'));
                    document.querySelector('#price').innerText = `â‚¦${price.toLocaleString('en-NG', {minimumFractionDigits: 2, maximumFractionDigits: 2})}`;
                    console.log('âœ… Using regular pricing:', price);

                    // Hide pricing info card
                    const pricingCard = document.getElementById('pricingInfoCard');
                    pricingCard.style.display = 'none';
                }
                // Update minimum payment if part payment is checked
                if (isPartPaymentCheckbox.checked) {
                    updateMinimumPayment();
                }
            }
        } catch (error) {
            console.error('âŒ Error fetching special pricing:', error);
        }
    }

    // Handle part payment checkbox
    const isPartPaymentCheckbox = document.getElementById('isPartPayment');
    const partPaymentAmountDiv = document.getElementById('partPaymentAmountDiv');
    const amountPaidInput = document.getElementById('amount_paid');
    const minimumPaymentText = document.getElementById('minimumPaymentText');
    const paymentModeSelect = document.getElementById('paymentmode');

    // Calculate total amount based on dates
    function calculateTotalAmount() {
        const checkIn = new Date(document.getElementById('checkIn').value);
        const checkOut = new Date(document.getElementById('checkOut').value);
        const pricePerNight = parseFloat(price); // Use current price (may be special price)
        const discountPerNightInput = document.getElementById('discount_per_night').value || '0';
        // Remove commas from discount value before parsing
        const discountPerNight = parseFloat(discountPerNightInput.replace(/,/g, '')) || 0;

        if (checkIn && checkOut && checkOut > checkIn) {
            const nights = Math.ceil((checkOut - checkIn) / (1000 * 60 * 60 * 24));
            const totalBeforeDiscount = nights * pricePerNight;
            const totalDiscount = nights * discountPerNight;
            const total = totalBeforeDiscount - totalDiscount;

            console.log('ðŸ’° Calculate Total:', {
                pricePerNight,
                discountPerNight,
                nights,
                totalBeforeDiscount,
                totalDiscount,
                total
            });

            return total;
        }
        return 0;
    }

    // Update minimum payment text
    function updateMinimumPayment() {
        const totalAmount = calculateTotalAmount();
        const minimumPayment = totalAmount * 0.5;
        minimumPaymentText.textContent = `Minimum payment (50%): â‚¦${minimumPayment.toLocaleString()}`;
        amountPaidInput.setAttribute('min', minimumPayment);
        amountPaidInput.setAttribute('max', totalAmount);
    }

    // Show/hide part payment amount field
    isPartPaymentCheckbox.addEventListener('change', function() {
        if (this.checked) {
            // Only allow part payment for Cash mode
            if (paymentModeSelect.value !== 'Cash') {
                showToast('Part payment is only available for Cash payment mode', 'red');
                this.checked = false;
                return;
            }
            partPaymentAmountDiv.style.display = 'block';
            updateMinimumPayment();
            amountPaidInput.required = true;
        } else {
            partPaymentAmountDiv.style.display = 'none';
            amountPaidInput.required = false;
        }
    });

    // Update minimum payment when dates change
    document.getElementById('checkIn').addEventListener('change', async function() {
        // Fetch special pricing for new check-in date
        await fetchSpecialPricing(this.value);

        if (isPartPaymentCheckbox.checked) {
            updateMinimumPayment();
        }
    });

    document.getElementById('checkOut').addEventListener('change', function() {
        if (isPartPaymentCheckbox.checked) {
            updateMinimumPayment();
        }
    });

    // Format currency input as user types (improved version)
    function formatCurrencyAsType(e) {
        const input = e.target;

        // Get the current value and cursor position
        let cursorPosition = input.selectionStart;
        let value = input.value;

        // Count commas before cursor
        const commasBeforeCursor = (value.substring(0, cursorPosition).match(/,/g) || []).length;

        // Remove all non-numeric characters
        const numericValue = value.replace(/[^0-9]/g, '');

        // If empty, just return
        if (numericValue === '') {
            input.value = '';
            return;
        }

        // Format with thousand separators
        const formattedValue = parseInt(numericValue, 10).toLocaleString('en-NG');

        // Set the formatted value
        input.value = formattedValue;

        // Calculate new cursor position
        const commasAfterCursor = (formattedValue.substring(0, cursorPosition).match(/,/g) || []).length;
        const commasDiff = commasAfterCursor - commasBeforeCursor;
        const newCursorPosition = cursorPosition + commasDiff;

        // Restore cursor position
        input.setSelectionRange(newCursorPosition, newCursorPosition);
    }

    // Add currency formatting to discount input as user types
    const discountInput = document.getElementById('discount_per_night');
    discountInput.addEventListener('input', function(e) {
        formatCurrencyAsType(e);

        // Update minimum payment if part payment is checked
        if (isPartPaymentCheckbox.checked) {
            updateMinimumPayment();
        }
    });

    // Add currency formatting to amount paid input as user types
    const amountPaidInputField = document.getElementById('amount_paid');
    amountPaidInputField.addEventListener('input', function(e) {
        formatCurrencyAsType(e);
    });

    // Remove formatting before form submission to get raw number
    function getNumericValue(formattedValue) {
        return parseFloat(formattedValue.replace(/,/g, '')) || 0;
    }

    // Fetch special pricing on page load
    fetchSpecialPricing(document.getElementById('checkIn').value);

    // Disable part payment for non-cash modes
    paymentModeSelect.addEventListener('change', function() {
        if (this.value !== 'Cash' && isPartPaymentCheckbox.checked) {
            isPartPaymentCheckbox.checked = false;
            partPaymentAmountDiv.style.display = 'none';
            amountPaidInput.required = false;
        }
    });

    // Handle form submission
    document.getElementById('submit_button').addEventListener('click', async (event) => {
        event.preventDefault(); // Prevent default form submission

        // Retrieve form values
        const checkInDate = document.getElementById('checkIn').value;
        const checkOutDate = document.getElementById('checkOut').value;
        const guestName = document.querySelector('input[name="guest_name"]').value;
        const guestPhone = document.querySelector('input[name="guest_phone"]').value;
        const guestEmail = document.querySelector('input[name="guest_email"]').value;
        const guestAddress = document.querySelector('input[name="guest_address"]').value;
        const paymentMode = document.querySelector('select[name="paymentmode"]').value;

        const loader = document.querySelector('.loader');
        const submitButton = document.getElementById('submit_button');

        // Show loader and disable submit button
        loader.style.display = 'inline-block';
        submitButton.disabled = true;

        // Field validation
        if (!checkInDate || !checkOutDate || !guestName) {
            showToast("Please fill out all required fields.", "red");
            resetLoader(loader, submitButton);
            return;
        }

        if (paymentMode === "customer-self-payment" && (!guestPhone || !guestEmail)) {
            showToast("Email & phone number are required for customer payment link.", "red");
            resetLoader(loader, submitButton);
            return;
        }

        // Ensure check-out date is after check-in date
        if (new Date(checkInDate) >= new Date(checkOutDate)) {
            showToast("Check-out date must be after check-in date.", "red");
            resetLoader(loader, submitButton);
            return;
        }

        // Validate email format if provided
        const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (guestEmail && !emailPattern.test(guestEmail)) {
            showToast("Please enter a valid email address.", "red");
            resetLoader(loader, submitButton);
            return;
        }

        // Validate part payment if checked
        const isPartPayment = isPartPaymentCheckbox.checked;
        const amountPaid = getNumericValue(amountPaidInput.value);

        if (isPartPayment) {
            const totalAmount = calculateTotalAmount();
            const minimumPayment = totalAmount * 0.5;
            const checkIn = new Date(document.getElementById('checkIn').value);
            const checkOut = new Date(document.getElementById('checkOut').value);
            const nights = Math.ceil((checkOut - checkIn) / (1000 * 60 * 60 * 24));
            const discountPerNight = getNumericValue(document.getElementById('discount_per_night').value);

            console.log('ðŸ’° Part Payment Validation:', {
                pricePerNight: price,
                nights,
                discountPerNight,
                totalBeforeDiscount: price * nights,
                totalDiscount: discountPerNight * nights,
                totalAmount,
                minimumPayment,
                amountPaid,
                isValid: amountPaid >= minimumPayment && amountPaid <= totalAmount
            });

            if (amountPaid < minimumPayment) {
                showToast(`Part payment must be at least â‚¦${minimumPayment.toLocaleString('en-NG', {minimumFractionDigits: 2})} (50% of total: â‚¦${totalAmount.toLocaleString('en-NG', {minimumFractionDigits: 2})})`, "red");
                resetLoader(loader, submitButton);
                return;
            }

            if (amountPaid > totalAmount) {
                showToast(`Payment amount (â‚¦${amountPaid.toLocaleString('en-NG', {minimumFractionDigits: 2})}) cannot exceed total amount (â‚¦${totalAmount.toLocaleString('en-NG', {minimumFractionDigits: 2})})`, "red");
                resetLoader(loader, submitButton);
                return;
            }
        }

        // Prepare payload for backend
        const id = url.searchParams.get('id');
        const cateName = url.searchParams.get('cat_id');
        const discountPerNight = getNumericValue(document.getElementById('discount_per_night').value);

        // Use FormData to support file upload
        const formData = new FormData();
        formData.append('start', checkInDate);
        formData.append('end', checkOutDate);
        formData.append('guest_name', guestName);
        formData.append('guest_email', guestEmail || '-');
        formData.append('guest_phone', guestPhone || '-');
        formData.append('guest_address', guestAddress || '-');
        formData.append('mode', paymentMode);
        formData.append('category_id', id);
        formData.append('room_id', room_id);
        formData.append('room_name', room_name);
        formData.append('room_number', room_number);
        formData.append('category_name', cateName);
        formData.append('is_part_payment', isPartPayment);
        formData.append('amount_paid', isPartPayment ? (amountPaid * 100) : null);
        formData.append('discount_per_night', discountPerNight * 100);

        // Add ID card file if selected
        const idCardInput = document.getElementById('id_card');
        if (idCardInput.files && idCardInput.files[0]) {
            formData.append('image', idCardInput.files[0]);
        }

        if (paymentMode === "Generate-Bank-Transfer" && (!guestPhone || !guestEmail)) {
            formData.set('guest_email', "wishmewellapartment@gmail.com");
            formData.set('guest_phone', "09111458637");
        }

        // Send the payment initialization request
        const response = await fetch("/payments/paystack/initialize/reception", {
            method: 'POST',
            body: formData, // Send FormData instead of JSON
        });
        
        const data = await response.json();
        resetLoader(loader, submitButton);

        if (!data.status) {
            showToast(data.message, "red");
            return;
        }

        // Handle response based on payment mode
        if (paymentMode === "Generate-Bank-Transfer" && data.data.authorization_url) {
            loadPaymentIframe(data.data.authorization_url);
        } else if (paymentMode === "Cash") {
            showToast(data.message, "green");
            window.location.reload();
        } else {
            showToast("Payment link sent to customer's email and phone.", "green");
        }
    });

    // Reset loader and enable button
    function resetLoader(loader, button) {
        loader.style.display = 'none';
        button.disabled = false;
    }

    // Load Paystack payment iframe
    function loadPaymentIframe(url) {
        const iframe = document.createElement('iframe');
        iframe.src = url;
        iframe.width = "100%";
        iframe.height = "700px"; // Adjust the height as necessary
        iframe.frameBorder = "0";

        const paymentContainer = document.getElementById('paymentContainer');
        paymentContainer.innerHTML = ''; // Clear previous content
        paymentContainer.appendChild(iframe); // Append iframe

        hideModalElements();
    }

    // Hide modal elements after loading iframe
    function hideModalElements() {
        document.querySelector(".show").style.display = "none";
        document.getElementById('modalRoomNumber').style.display = "none";
        document.getElementById('modalRoomName').style.display = "none";
        document.getElementById('modalRoomStatus').style.display = "none";
        document.getElementById('submit_button').style.display = "none";
    }
});

        
