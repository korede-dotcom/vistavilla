<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<!-- Modern Luxury Header -->
<header class="modern-luxury-header">
  <div class="modern-header-container">
    <div class="modern-header-content">
      <!-- Logo -->
      <div class="modern-logo">
        <a href="/">
          <img src="images/logo-2.png" alt="Vistavilla Apartment" class="modern-logo-img">
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="modern-nav-desktop">
        <ul class="modern-nav-list">
          <li class="modern-nav-item">
            <a href="/" class="modern-nav-link">Home</a>
          </li>
          <li class="modern-nav-item">
            <a href="/rooms" class="modern-nav-link">Rooms & Suites</a>
          </li>
          <li class="modern-nav-item">
            <a href="/gallery" class="modern-nav-link">Gallery</a>
          </li>
          <li class="modern-nav-item">
            <a href="/page-contact" class="modern-nav-link">Contact</a>
          </li>
          <li class="modern-nav-item">
            <a href="/terms-and-conditions" class="modern-nav-link">Terms</a>
          </li>
        </ul>
      </nav>

      <!-- Header Actions -->
      <div class="modern-header-actions">
        <a href="/rooms" class="modern-book-btn">
          <span>Book Now</span>
          <i class="fas fa-arrow-right"></i>
        </a>
        <button class="modern-mobile-toggle" id="modernMobileToggle">
          <span class="modern-hamburger"></span>
          <span class="modern-hamburger"></span>
          <span class="modern-hamburger"></span>
        </button>
      </div>
    </div>

    <!-- Marquee Banner (if active) -->
    <% if (activeMarquees) { %>
      <div class="modern-marquee-banner">
        <div class="modern-marquee-content">
          <i class="fas fa-bullhorn"></i>
          <marquee behavior="scroll" direction="left">
            <%= activeMarquees.text %>
          </marquee>
        </div>
      </div>
    <% } %>
  </div>

  <!-- Mobile Menu -->
  <div class="modern-mobile-menu" id="modernMobileMenu">
    <div class="modern-mobile-menu-header">
      <div class="modern-mobile-logo">
        <img src="images/logo-2.png" alt="Vistavilla Apartment">
      </div>
      <button class="modern-mobile-close" id="modernMobileClose">
        <i class="fas fa-times"></i>
      </button>
    </div>

    <nav class="modern-mobile-nav">
      <ul class="modern-mobile-nav-list">
        <li class="modern-mobile-nav-item">
          <a href="/" class="modern-mobile-nav-link">
            <i class="fas fa-home"></i>
            <span>Home</span>
          </a>
        </li>
        <li class="modern-mobile-nav-item">
          <a href="/rooms" class="modern-mobile-nav-link">
            <i class="fas fa-bed"></i>
            <span>Rooms & Suites</span>
          </a>
        </li>
        <li class="modern-mobile-nav-item">
          <a href="/gallery" class="modern-mobile-nav-link">
            <i class="fas fa-images"></i>
            <span>Gallery</span>
          </a>
        </li>
        <li class="modern-mobile-nav-item">
          <a href="/page-contact" class="modern-mobile-nav-link">
            <i class="fas fa-envelope"></i>
            <span>Contact</span>
          </a>
        </li>
        <li class="modern-mobile-nav-item">
          <a href="/terms-and-conditions" class="modern-mobile-nav-link">
            <i class="fas fa-file-contract"></i>
            <span>Terms & Conditions</span>
          </a>
        </li>
      </ul>
    </nav>

    <div class="modern-mobile-contact">
      <div class="modern-mobile-contact-item">
        <i class="fas fa-phone"></i>
        <div class="modern-mobile-contact-info">
          <span class="modern-mobile-contact-label">Call Us</span>
          <a href="tel:+2349111458637">+234 911 145 8637</a>
        </div>
      </div>
      <div class="modern-mobile-contact-item">
        <i class="fas fa-envelope"></i>
        <div class="modern-mobile-contact-info">
          <span class="modern-mobile-contact-label">Email</span>
          <a href="mailto:vistavillaapartment@gmail.com">vistavillaapartment@gmail.com</a>
        </div>
      </div>
    </div>

    <div class="modern-mobile-social">
      <a href="#" class="modern-mobile-social-link"><i class="fab fa-facebook-f"></i></a>
      <a href="#" class="modern-mobile-social-link"><i class="fab fa-twitter"></i></a>
      <a href="#" class="modern-mobile-social-link"><i class="fab fa-instagram"></i></a>
      <a href="#" class="modern-mobile-social-link"><i class="fab fa-linkedin-in"></i></a>
    </div>
  </div>

  <!-- Mobile Menu Backdrop -->
  <div class="modern-mobile-backdrop" id="modernMobileBackdrop"></div>
</header>

<script>
// Modern Mobile Menu Toggle
document.addEventListener('DOMContentLoaded', function() {
  const mobileToggle = document.getElementById('modernMobileToggle');
  const mobileClose = document.getElementById('modernMobileClose');
  const mobileMenu = document.getElementById('modernMobileMenu');
  const mobileBackdrop = document.getElementById('modernMobileBackdrop');

  function openMobileMenu() {
    mobileMenu.classList.add('active');
    mobileBackdrop.classList.add('active');
    document.body.style.overflow = 'hidden';
  }

  function closeMobileMenu() {
    mobileMenu.classList.remove('active');
    mobileBackdrop.classList.remove('active');
    document.body.style.overflow = '';
  }

  if (mobileToggle) {
    mobileToggle.addEventListener('click', openMobileMenu);
  }

  if (mobileClose) {
    mobileClose.addEventListener('click', closeMobileMenu);
  }

  if (mobileBackdrop) {
    mobileBackdrop.addEventListener('click', closeMobileMenu);
  }

  // Close mobile menu on link click
  const mobileLinks = document.querySelectorAll('.modern-mobile-nav-link');
  mobileLinks.forEach(link => {
    link.addEventListener('click', closeMobileMenu);
  });

  // Header scroll effect
  let lastScroll = 0;
  const header = document.querySelector('.modern-luxury-header');

  window.addEventListener('scroll', function() {
    const currentScroll = window.pageYOffset;

    if (currentScroll > 100) {
      header.classList.add('scrolled');
    } else {
      header.classList.remove('scrolled');
    }

    lastScroll = currentScroll;
  });
});
</script>

